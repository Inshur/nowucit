{
    "compilerOptions": {
        "target": "es5",
        "lib": ["esnext", "dom"],
        "jsx": "react",
        "module": "commonjs",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": false
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
